{
  "name": "telegram-bot-template",
  "type": "module",
  "version": "1.0.0",
  "description": "Telegram bot starter template",
  "imports": {
    "#root/*": "./build/src/*"
  },
  "author": "MoonCheung <ikmoons.is@gmail.com>",
  "scripts": {
    "build": "tsc --noEmit false",
    "dev": "tsc-watch --onSuccess \"tsx ./src/main.ts\"",
    "start": "tsc && tsx ./src/main.ts"
  },
  "dependencies": {
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/types": "^3.23.0",
    "@hono/node-server": "^1.19.9",
    "dotenv": "^17.2.3",
    "grammy": "^1.39.3",
    "hono": "^4.11.4",
    "iso-639-1": "^3.1.5",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "valibot": "^0.42.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.9",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
